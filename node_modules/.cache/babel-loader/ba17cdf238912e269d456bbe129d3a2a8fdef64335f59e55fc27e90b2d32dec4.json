{"ast":null,"code":"import { DEFAULT_VALUES, TABLE_COLUMN_KEYS } from '@/constants/content';\nimport { getColStyle, handleImageError, truncateText, formatPrice, formatDiscount, formatAvailability, getAvailabilityClass, formatDimensions, formatWeight, getNestedValue, getRatingComment, capitalizeFirstLetter } from '@/utils/tableHelpers';\nexport default {\n  name: 'BaseTable',\n  data() {\n    return {\n      DEFAULT_VALUES,\n      TABLE_COLUMN_KEYS\n    };\n  },\n  props: {\n    data: {\n      type: Array,\n      default: () => []\n    },\n    tableColumnData: {\n      type: Array,\n      default: () => []\n    }\n  },\n  methods: {\n    getColStyle,\n    handleImageError,\n    truncateText,\n    formatPrice,\n    formatDiscount,\n    formatAvailability,\n    getAvailabilityClass,\n    formatDimensions,\n    formatWeight,\n    getNestedValue,\n    getRatingComment,\n    capitalizeFirstLetter\n  }\n};","map":{"version":3,"names":["DEFAULT_VALUES","TABLE_COLUMN_KEYS","getColStyle","handleImageError","truncateText","formatPrice","formatDiscount","formatAvailability","getAvailabilityClass","formatDimensions","formatWeight","getNestedValue","getRatingComment","capitalizeFirstLetter","name","data","props","type","Array","default","tableColumnData","methods"],"sources":["src/components/atoms/BaseTable.vue"],"sourcesContent":["<template>\n  <div class=\"table-wrapper\">\n    <div ref=\"tableBody\" class=\"table-main fixed-header\">\n      <table>\n        <colgroup>\n          <col :style=\"getColStyle(field)\" v-for=\"(field, index) in tableColumnData\" :key=\"index\" />\n        </colgroup>\n        <thead class=\"table-head\">\n          <tr>\n            <th v-for=\"(field, index) in tableColumnData\" :key=\"index\">\n              {{ field.name }}\n            </th>\n          </tr>\n        </thead>\n        <tbody class=\"table-body\">\n          <tr v-for=\"(item, index) in data\" :key=\"item.id || index\">\n            <td v-for=\"(field, fieldIndex) in tableColumnData\" :key=\"fieldIndex\">\n              <span>\n                <!-- Image Column -->\n                <div v-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'imageAction'\">\n                  <div class=\"image-container\">\n                    <LazyImage \n                      :src=\"item[field.key]\" \n                      :alt=\"item.title\"\n                      class=\"product-image\"\n                    />\n                  </div>\n                </div>\n                \n                <!-- Description Column -->\n                <div v-else-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'descriptionAction'\">\n                  <div class=\"description-text\">\n                    {{ truncateText(item[field.key], DEFAULT_VALUES.DESCRIPTION_MAX_LENGTH) }}\n                  </div>\n                </div>\n                \n                <!-- Price Column -->\n                <div v-else-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'priceAction'\">\n                  <div class=\"price-text\">\n                    {{ formatPrice(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Discount Column -->\n                <div v-else-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'discountAction'\">\n                  <div class=\"discount-text\">\n                    {{ formatDiscount(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Availability Column -->\n                <div v-else-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'availabilityAction'\">\n                  <div class=\"availability-badge\" :class=\"getAvailabilityClass(item[field.key])\">\n                    {{ formatAvailability(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Rating Column -->\n                <div v-else-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'ratingAction'\">\n                  <div class=\"rating-container\">\n                    <span class=\"rating-value\">{{ item[field.key] }}</span>\n                    <span class=\"rating-comment\">{{ getRatingComment(item) }}</span>\n                  </div>\n                </div>\n                \n                <!-- Date Column -->\n                <div v-else-if=\"!!field.scopedSlots && field.scopedSlots.customRender === 'dateAction'\">\n                  <div class=\"date-text\">\n                    {{ formatDate(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Size Column -->\n                <div v-else-if=\"field.key === TABLE_COLUMN_KEYS.DIMENSIONS\">\n                  <div class=\"size-text\">\n                    {{ formatDimensions(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Weight Column -->\n                <div v-else-if=\"field.key === TABLE_COLUMN_KEYS.WEIGHT\">\n                  <div class=\"weight-text\">\n                    {{ formatWeight(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Barcode Column -->\n                <div v-else-if=\"field.key === TABLE_COLUMN_KEYS.BARCODE\">\n                  <div class=\"barcode-text\">\n                    {{ getNestedValue(item, field.key) }}\n                  </div>\n                </div>\n                \n                <!-- Category Column -->\n                <div v-else-if=\"field.key === TABLE_COLUMN_KEYS.CATEGORY\">\n                  <div class=\"category-text\">\n                    {{ capitalizeFirstLetter(item[field.key]) }}\n                  </div>\n                </div>\n                \n                <!-- Default Column -->\n                <span v-else> {{ getNestedValue(item, field.key) || '' }}</span>\n              </span>\n            </td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { \n  DEFAULT_VALUES, \n  TABLE_COLUMN_KEYS \n} from '@/constants/content'\nimport {\n  getColStyle,\n  handleImageError,\n  truncateText,\n  formatPrice,\n  formatDiscount,\n  formatAvailability,\n  getAvailabilityClass,\n  formatDimensions,\n  formatWeight,\n  getNestedValue,\n  getRatingComment,\n  capitalizeFirstLetter\n} from '@/utils/tableHelpers'\n\nexport default {\n  name: 'BaseTable',\n  data() {\n    return {\n      DEFAULT_VALUES,\n      TABLE_COLUMN_KEYS\n    }\n  },\n  props: {\n    data: {\n      type: Array,\n      default: () => []\n    },\n    tableColumnData: {\n      type: Array,\n      default: () => []\n    }\n  },\n  methods: {\n    getColStyle,\n    handleImageError,\n    truncateText,\n    formatPrice,\n    formatDiscount,\n    formatAvailability,\n    getAvailabilityClass,\n    formatDimensions,\n    formatWeight,\n    getNestedValue,\n    getRatingComment,\n    capitalizeFirstLetter\n  }\n}\n</script>\n\n<style lang=\"scss\" scoped>\n.table-wrapper {\n  width: 100%;\n  margin-right: auto;\n  margin-left: auto;\n  min-height: fit-content;\n\n  table {\n    border: 1px solid #dadada;\n    border-radius: 8px 8px 0px 0px;\n    table-layout: fixed;\n    width: 100%;\n    margin: 0 auto;\n  }\n\n  .table-main {\n    border: none;\n    width: 100%;\n    overflow: auto;\n    &.fixed-header {\n      th {\n        position: sticky;\n        top: 0;\n        z-index: 2;\n      }\n    }\n    & .table-head {\n      font-style: normal;\n      font-weight: 500;\n      font-size: 14px;\n      line-height: 17px;\n      width: 100%;\n      white-space: nowrap;\n      position: relative;\n      text-align: left;\n      & tr {\n        & th {\n          background: #f5f5f5;\n          width: fit-content;\n          padding: 16px;\n          font-weight: 600;\n          border-bottom: 1px solid #dadada;\n          border-right: 1px solid #dadada;\n          &:first-child {\n            border-radius: 8px 0px 0px 0px;\n          }\n          &:last-child {\n            border-radius: 0px 8px 0px 0px;\n            border-right: none;\n          }\n        }\n      }\n    }\n    & .table-body {\n      & tr {\n        padding: 16px;\n        position: relative;\n\n        & td {\n          border-right: 1px solid #dadada;\n          &:last-child {\n            border-right: none;\n          }\n        }\n        &:hover {\n          cursor: pointer;\n        }\n      }\n    }\n    & td {\n      border-bottom: 1px solid #dadada;\n      background: #ffffff;\n      text-align: left;\n      font-style: normal;\n      font-weight: 500;\n      font-size: 14px;\n      color: #484848;\n      line-height: 17px;\n      padding: 16px;\n      vertical-align: middle;\n      & span {\n        display: flex;\n        flex-direction: row;\n        align-items: center;\n        gap: 5px;\n      }\n      & .image-container {\n        display: flex;\n        justify-content: center;\n        align-items: center;\n        width: 100%;\n        height: 80px;\n        & .product-image {\n          max-width: 100%;\n          max-height: 100%;\n          object-fit: contain;\n          border-radius: 4px;\n          border: 1px solid #e0e0e0;\n          background-color: #f9f9f9;\n          transition: transform 0.2s ease;\n          &:hover {\n            transform: scale(1.05);\n          }\n        }\n      }\n      \n      & .description-text {\n        max-width: 100%;\n        word-wrap: break-word;\n        line-height: 1.4;\n      }\n      \n      & .price-text {\n        font-weight: 600;\n        color: #2c3e50;\n      }\n      \n      & .discount-text {\n        font-weight: 600;\n        color: #e74c3c;\n      }\n      \n      & .availability-badge {\n        padding: 4px 8px;\n        border-radius: 12px;\n        font-size: 12px;\n        font-weight: 600;\n        text-align: center;\n        min-width: 80px;\n        \n        &.availability-in-stock {\n          background-color: #d4edda;\n          color: #155724;\n        }\n        \n        &.availability-out-of-stock {\n          background-color: #f8d7da;\n          color: #721c24;\n        }\n        \n        &.availability-unknown {\n          background-color: #f8f9fa;\n          color: #6c757d;\n        }\n      }\n      \n      & .rating-container {\n        display: flex;\n        flex-direction: column;\n        align-items: flex-start;\n        gap: 4px;\n        \n        .rating-value {\n          font-weight: 600;\n          color: #2c3e50;\n          font-size: 14px;\n        }\n        \n        .rating-comment {\n          font-size: 11px;\n          color: #6c757d;\n          font-style: italic;\n        }\n      }\n      \n      & .date-text {\n        font-size: 13px;\n        color: #6c757d;\n      }\n      \n      & .size-text,\n      & .weight-text,\n      & .barcode-text {\n        font-family: 'Courier New', monospace;\n        font-size: 13px;\n      }\n      \n      & .category-text {\n        font-weight: 500;\n        color: #2c3e50;\n        text-transform: capitalize;\n      }\n    }\n  }\n}\n</style> "],"mappings":"AAgHA,SACAA,cAAA,EACAC,iBAAA,QACA;AACA,SACAC,WAAA,EACAC,gBAAA,EACAC,YAAA,EACAC,WAAA,EACAC,cAAA,EACAC,kBAAA,EACAC,oBAAA,EACAC,gBAAA,EACAC,YAAA,EACAC,cAAA,EACAC,gBAAA,EACAC,qBAAA,QACA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MACAf,cAAA;MACAC;IACA;EACA;EACAe,KAAA;IACAD,IAAA;MACAE,IAAA,EAAAC,KAAA;MACAC,OAAA,EAAAA,CAAA;IACA;IACAC,eAAA;MACAH,IAAA,EAAAC,KAAA;MACAC,OAAA,EAAAA,CAAA;IACA;EACA;EACAE,OAAA;IACAnB,WAAA;IACAC,gBAAA;IACAC,YAAA;IACAC,WAAA;IACAC,cAAA;IACAC,kBAAA;IACAC,oBAAA;IACAC,gBAAA;IACAC,YAAA;IACAC,cAAA;IACAC,gBAAA;IACAC;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}